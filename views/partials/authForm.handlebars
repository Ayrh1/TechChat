     
<!-- LOGIN/LOGOUT for this form supports both login and logout {{if}} determine what displays depending on what the user will do -->  

<div class = "flex flex-col justify-center items-center self-center h-full w-9/12">
        
    <div class = "flex justify-evenly items-center flex-col w-5/6 h-5/6
    bg-black rounded-lg outline outline-8 outline-sky-600 outline-offset-4" >
            
    <form action="{{actionRoute}}" method="post" class = "w-full h-3/4 flex flex-col justify-around items-center" autocomplete="off" >
            
    <img class="h-24 self-center mt-5" src="./Assets/minilogo.jpg" alt="TechLogoImg">
    <p class="text-2xl text-white antialiased font-bold self-center">TechChat</p> 
    
    <input class = " w-9/12  h-20 mb-3 pl-6
    border-b-4 border-sky-900 bg-sky-300 bg-opacity-60
    placeholder:text-white placeholder:italic text-3xl rounded-lg" type = "text" name = "username" placeholder = "Enter Your Username..."></input>
           
    <!--email input box for sign-up -->
    {{#if isSignUp}}
    <input class = " w-9/12  h-20  mb-3 pl-6  
    border-b-4 border-sky-900 bg-sky-300 bg-opacity-60
    placeholder:text-white placeholder:italic text-3xl rounded-lg" type = "email" name = "email" placeholder = "Enter Your Email..."></input>
    {{/if}}

    <input class = " w-9/12  h-20  mb-3 pl-6  
    border-b-4 border-sky-900 bg-sky-300 bg-opacity-60
    placeholder:text-white placeholder:italic text-3xl rounded-lg" type = "password" name = "password" placeholder = "Enter Your Password..."></input>
    <input class = "w-1/3 h-16 m-5 rounded-lg font-extrabold bg-sky-500 text-black text-5xl 
    outline outline-1 outline-white outline-offset-4 hover:outline-dashed" type = "submit" value = "Code!">

    <!--sign-up option-->
    {{#if isSignUp}}
    <input class = "font-extrabold text-red-500 text-xl outline outline-1 outline-red-500 outline-offset-4 hover:outline-dashed" type = "submit" value = "Oops!! Let me resgister first!">   
    <!--login instead -->
    {{else}}
    <input class = "font-extrabold text-green-500 text-xl outline outline-1 outline-green-500 outline-offset-4 hover:outline-dashed" type = "submit" value = "I'm cool! let me login! "> 
    {{/if}}
    </form>
            
</div> 